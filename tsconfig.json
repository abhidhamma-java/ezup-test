{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/other/config/*"],
      "@constant/*": ["./src/other/constant/*"],
      "@util/*": ["./src/other/util/*"],
      "@api/*": ["./src/service/api/*"],
      "@hook/*": ["./src/service/hook/*"],
      "@state/*": ["./src/service/state/*"],
      "@asset/*": ["src/view/asset/*"],
      "@components/*": ["src/view/components/*"],
      "@routes/*": ["src/view/routes/*"],
      "@app/*": ["src/view/app/*"],
      "@style/*": ["src/view/style/*"]
    }
  },
  "include": ["src"]
}
